{
  "name": "@typhonjs-fvtt/fvttdev",
  "description": "Provides a zero config CLI build tool for Foundry VTT modules / systems based on Rollup and Oclif",
  "version": "0.0.2",
  "author": "typhonrt",
  "bin": {
    "fvttdev": "./bin/run.js"
  },
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "bugs": "https://github.com/typhonjs-fvtt/fvttdev/issues",
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "typhonjs-node-bundle/oclif-config#main",
    "@oclif/plugin-commands": "^1.3.0",
    "@oclif/plugin-help": "^3.2.2",
    "@oclif/plugin-plugins": "^1.10.0",
    "@oclif/plugin-which": "^1.0.3",
    "@typhonjs-node-bundle/oclif-commons": "typhonjs-node-bundle/oclif-commons#main",
    "@typhonjs-node-bundle/plugin-fileutil": "typhonjs-node-bundle/plugin-fileutil#main",
    "@typhonjs-node-bundle/plugin-flaghandler": "typhonjs-node-bundle/plugin-flaghandler#main",
    "@typhonjs-node-rollup/plugin-bundle-core": "typhonjs-node-rollup/plugin-bundle-core",
    "backbone-esnext-events": "^0.3.0",
    "fs-jetpack": "^4.0.0",
    "typhonjs-color-logger": "^0.0.13",
    "typhonjs-file-util": "^0.0.11",
    "typhonjs-package-util": "^0.0.3",
    "typhonjs-plugin-manager": "^0.2.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/test": "^1.2.8",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "globby": "^10.0.2",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "typhonjs-config-eslint": "^0.6.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "/bin",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/src"
  ],
  "homepage": "https://github.com/typhonjs-fvtt/fvttdev",
  "keywords": [
    "oclif"
  ],
  "license": "MPL-2.0",
  "oclif": {
    "commands": "./src/commands",
    "hooks": {
      "init": [
        "./src/hooks/init/init",
        "./src/hooks/init/bundle"
      ]
    },
    "bin": "fvttdev",
    "plugins": [
      "@oclif/plugin-commands",
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-which",
      "@typhonjs-node-rollup/plugin-bundle-core"
    ]
  },
  "repository": "typhonjs-fvtt/fvttdev",
  "scripts": {
    "run-local-debug": "env DEBUG=* ./bin/run.js bundle",
    "run-build": "./bin/run.js bundle",
    "run-build-0": "./bin/run.js bundle --cwd=./test/fixture/demo-0",
    "run-build-1entry": "./bin/run.js bundle -e test --cwd=./test/fixture/demo-1entry",
    "run-build-1entry-noop": "./bin/run.js bundle -e test --cwd=./test/fixture/demo-1entry --noop",
    "run-build-1entry-metafile": "./bin/run.js bundle -e test --cwd=./test/fixture/demo-1entry --metafile",
    "run-build-1entry-ts": "./bin/run.js bundle -e test --cwd=./test/fixture/demo-1entry-ts",
    "run-build-2entry": "./bin/run.js bundle -e test --cwd=./test/fixture/demo-2entry",
    "eslint": "eslint .",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint .",
    "prepack": "oclif-dev manifest && oclif-dev readme && oclif-dev manifest && oclif-dev readme",
    "test": "nyc mocha --forbid-only \"test/**/*.test.js\"",
    "version": "oclif-dev readme && git add README.md"
  }
}
