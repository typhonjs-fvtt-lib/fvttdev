{
  "name": "@typhonjs-fvtt/fvttdev",
  "description": "Provides a zero config CLI build tool for Foundry VTT modules / systems based on Rollup and Oclif",
  "version": "0.0.2",
  "author": "typhonrt",
  "bin": {
    "fvttdev": "./bin/run.js"
  },
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "bugs": "https://github.com/typhonjs-fvtt/fvttdev/issues",
  "dependencies": {
    "@oclif/core": "git+https://github.com/typhonjs-oclif/core.git",
    "@typhonjs-node-bundle/oclif-commons": "typhonjs-node-bundle/oclif-commons#main",
    "@typhonjs-node-bundle/plugin-fileutil": "typhonjs-node-bundle/plugin-fileutil#main",
    "@typhonjs-node-bundle/plugin-flaghandler": "typhonjs-node-bundle/plugin-flaghandler#main",
    "@typhonjs-node-rollup/plugin-bundle-core": "typhonjs-node-rollup/plugin-bundle-core",
    "@typhonjs-oclif/helpbase": "^0.0.1",
    "backbone-esnext-events": "^0.3.0",
    "fs-jetpack": "^4.0.0",
    "typhonjs-color-logger": "^0.0.13",
    "typhonjs-file-util": "^0.0.11",
    "typhonjs-package-util": "^0.0.3",
    "typhonjs-plugin-manager": "^0.2.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "typhonjs-config-eslint": "^0.6.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "/bin",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/src"
  ],
  "homepage": "https://github.com/typhonjs-fvtt/fvttdev",
  "keywords": [
    "oclif"
  ],
  "license": "MPL-2.0",
  "oclif": {
    "commands": "./src/commands",
    "helpClass": "./src/help/DynamicHelp",
    "hooks": {
      "init": [
        "./src/hooks/init/init",
        "./src/hooks/init/bundle"
      ]
    },
    "bin": "fvttdev",
    "plugins": [
      "@typhonjs-node-rollup/plugin-bundle-core"
    ]
  },
  "repository": "typhonjs-fvtt/fvttdev",
  "scripts": {
    "run-debug-help-validate:manifest": "env DEBUG=* ./bin/run.js bundle --help",
    "run-bundle-debug": "env DEBUG=* ./bin/run.js bundle",
    "run-bundle": "./bin/run.js bundle",
    "run-bundle-0": "./bin/run.js bundle --cwd=./test/fixture/demo-0",
    "run-bundle-1entry": "./bin/run.js bundle -e test --cwd=./test/fixture/demo-1entry",
    "run-bundle-1entry-noop": "./bin/run.js bundle -e test --cwd=./test/fixture/demo-1entry --noop",
    "run-bundle-1entry-metafile": "./bin/run.js bundle -e test --cwd=./test/fixture/demo-1entry --metafile",
    "run-bundle-1entry-ts": "./bin/run.js bundle -e test --cwd=./test/fixture/demo-1entry-ts",
    "run-bundle-2entry": "./bin/run.js bundle -e test --cwd=./test/fixture/demo-2entry",
    "run-validate-manifest": "./bin/run.js validate:manifest",
    "eslint": "eslint .",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint .",
    "prepack": "oclif-dev manifest && oclif-dev manifest",
    "test": "nyc mocha --forbid-only \"test/**/*.test.js\""
  }
}
